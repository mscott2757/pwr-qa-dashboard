<div class="page-header" id="qa-header">
	<div class="page-title">
    <h2 class="app-page-title"><%= ApplicationTag.page_title(@method) %> <em>- <%= @env_tag.name %></em></h2>
    <p class="col-links">Apps per row: <%= render partial: 'app_col_link', locals: { col_num: 1 } %> <%= render partial: 'app_col_link', locals: { col_num: 2 } %> <%= render partial: 'app_col_link', locals: { col_num: 3 } %> <%= render partial: 'app_col_link', locals: { col_num: 4 } %></p>
	</div>
</div>

<div class="app-body">
  <% @applications.each_slice(@app_col) do |app_row| %>
    <div class="row">
      <% app_row.each do |app| %>
        <%= render partial: "app_summary", locals: { app: app, tickets: app.jira_tickets(@method, @env_tag), failing_tests: app.failing_tests(@method, @env_tag), total_passing: app.total_passing(@method, @env_tag) } %>
      <% end %>
    </div>
  <% end %>
</div>
