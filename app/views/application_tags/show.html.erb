<div class="page-header" id="app-show-header">
	<div class="page-title">
    <h2><%= @app.name %></h2>
    <h4><%= ApplicationTag.test_type_display(@method) %></h4>
	</div>
  <div class="app-progress-header">
    <div class="progress-summary">
      <p class="total-passing"><%= @app.total_passing_format(@method, @env_tag) %></p>
      <p class="total-failing" align="right"><%= @app.total_failing_format(@method, @env_tag) %></p>
    </div>
    <div id="progressbar-<%= @app.id %>"></div>
    <p class="col-links">Tests per row: <%= render partial: 'test_col_link', locals: { col_num: 3 } %> <%= render partial: 'test_col_link', locals: { col_num: 4 } %> <%= render partial: 'test_col_link', locals: { col_num: 6 } %></p>
  </div>
  <script>
    <%= render partial: "progress_bar.js", locals: { app: @app, method: @method, tooltip: false, env_tag: @env_tag } %>
  </script>
</div>

<div class="app-body">
  <% @tests.each_slice(@test_col) do |test_row| %>
    <div class="row">
      <% test_row.each do |test| %>
        <div class="col-sm-<%= 12 / @test_col %>" id="test-summary-col">

          <div class="test-container test-container-<%= test.id %>">

            <div class="test-header">
              <%= link_to test.job_url, class: 'link-title' do %>
                <h5><%= test.name %></h5>
              <% end %>
              <div>
                <div class="test-type-title">
                  <p class="test-type-tag"><%= test.test_type.name if test.test_type %></p>

                  <div class="jira-section">
                    <a class="test-type-tag" id="jira-toggle-<%= test.id %>">JIRA
                      <% if test.active_jira_tickets.count > 0 %>
                        <span class="badge" id="jira-badge-<%= test.id %>"><%= test.active_jira_tickets.count %></span>
                      <%end %>
                    </a>
                    <%= render partial: "jira_tickets", locals: { test: test } %>
                    <%= render partial: "add_ticket_form", locals: {test: test} %>
                  </div>

                  <%= link_to 'edit', edit_test_path(test), remote: true, class: 'edit-test-link', id: "edit-test-#{ test.id }"  %>
  <script>
    <%= render partial: "bind_edit_link.js.erb", locals: { test: test } %>
  </script>
                </div>
                <p align="right" class="test-link-title"><%= link_to test.last_build_display, test.last_build_url, class: 'test-link' %> </p>
              </div>
            </div>

            <div class="test-body">
              <div class="test-status test-status-<%= test.status_css %>">
                <% if test.failing? and test.last_successful_build %>
                  <p class="test-status-title"><%= link_to "last successful #{test.last_successful_build_display}", test.last_successful_build_url, class: 'last-successful-link' %></p>
                <% elsif !test.passing? %>
                  <p class="test-status-title"><%= test.status_display %></p>
                <% end %>
              </div>
            </div>

          </div>

        </div>
      <% end %>
    </div>
  <% end %>
</div>
