<div class='col-dropdown'>
  <div class="dropdown">
    <span>Apps per row: </span>
    <button class="btn btn-default btn-sm" data-toggle="dropdown" type="button"><%= @app_col.to_s %> <span class="caret"></span></button>
    <ul class="dropdown-menu">
      <% ([1,2,3,4] - [@app_col]).each do |col_num| %>
        <li>
          <%= link_to col_num.to_s , edit_app_col_application_tags_path(app_col: col_num, method: @method), remote: true %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
